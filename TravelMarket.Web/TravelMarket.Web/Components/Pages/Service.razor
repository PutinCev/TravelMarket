@page "/{Id:int}"
@inject ServServise ServServise


<style>
	.my-text {
		color: #333333;
		font-family: Arial, sans-serif;
		font-size: 25px;
		line-height: 1.5;
		text-align: left;
	}
</style>

    <h1>@service.Name</h1>
	<h2>Стоимость @service.Cost руб.</h2>
    <h3>@service.TypeOfSevice</h3>
	<p>		
	   <img src=@service.Img alt="Описание изображения" width="100" height="100">
       <p class = "my-text">
			@service.Description
		</p>
	</p>


@code {
	[Parameter]
	public int Id { get; set; }
	ServiceOutputModel service;
	protected override void OnInitialized()
	{
		service = ServServise.GetAll().Where(p => p.Id ==Id).FirstOrDefault();
		base.OnInitialized();
	}
}


